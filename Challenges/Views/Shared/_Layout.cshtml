<!DOCTYPE html>

@{ 
    Challenges.Models.Users user = (Challenges.Models.Users)Session["User"] ?? new Challenges.Models.Users { Nickname = "no" };
    if (user.Nickname == null) { user.Nickname = user.Login; }
    ViewBag.User = user;
    ViewBag.IsAuthorized = (Challenges.Models.Users)Session["User"] != null;
}

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        Challenge
    </title>
    <link rel="stylesheet" href="~/Content/style.css"/>
</head>

<body>
    <div class="menu">
        <h1 class="logo">Logo</h1>
        <nav class="nav">
            <a class="nav_link" href="#main">Главная</a>
            <a class="nav_link" href="#rivals">Соперники</a>
            <a class="nav_link" href="#search">Поиск</a>
            <a class="nav_link" href="#notifications">Уведомления</a>
            <a class="nav_link" href="#messanges">Сообщения</a>
            <a class="nav_link" href="#save">Сохранённое</a>
            @if (ViewBag.IsAuthorized)
            {
                <a class="nav_link" href="#profile">@ViewBag.User.Nickname</a>
            }
            else
            {
                <a class="nav_link" href="/Auth/Authorize">Войти</a>
            }
            <a class="nav_link" href="#customization">Настройки</a>
        </nav>

        <div class="button">
            <a class="btn btn-oval" href="#button_action">-</a>
        </div>
    </div>
    @RenderBody()
    <div class="topics">
        <h2 class="topics_title">Актуальные темы</h2>
        <nav class="topics_nav">
            <a class="topics_link" href="#topics_link">Здесь</a>
            <a class="topics_link" href="#topics_link">Будут</a>
            <a class="topics_link" href="#topics_link">Расположены</a>
            <a class="topics_link" href="#topics_link">Актуальные</a>
            <a class="topics_link" href="#topics_link">Темы</a>
            <a class="topics_link" href="#topics_link">Челленджей</a>
        </nav>
    </div>
</body>
</html>
