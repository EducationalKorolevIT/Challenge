@if (ViewBag.errCode != 0)
{
    <p>Неправильный логин/пароль</p>
}

<style>
    .input_box {

    }
</style>

<form method="get" action="/Auth/Authorize">
    <table>
        <tr>
            <td>Логин</td>
            <td><input type="text" name="login" class="input_box"/></td>
        </tr>
        <tr>
            <td>Пароль</td>
            <td><input type="text" name="password" class="input_box"/></td>
        </tr>
        <tr>
            <td colspan="2"><input type="submit" value="Авторизоваться" class="input_box"/></td>
        </tr>
    </table>
</form>
<a href="/Auth/Registration">Еще нет аккаунта? Зарегестрироваться</a>
